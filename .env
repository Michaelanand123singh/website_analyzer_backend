# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration
USE_MONGODB=True
MONGODB_URI=mongodb://localhost:27017/website_analyzer
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/website_analyzer

# SQLite (fallback if MongoDB is disabled)
DATABASE_URL=website_analyzer.db

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Authentication Settings
AUTH_REQUIRED=False
ALLOW_ANONYMOUS_ANALYSIS=True

# Optional: Advanced Configuration
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=2000
CRAWLER_TIMEOUT=30
CRAWLER_MAX_PAGES=1
MAX_CONTENT_LENGTH=16777216
RATE_LIMIT=100 per hour